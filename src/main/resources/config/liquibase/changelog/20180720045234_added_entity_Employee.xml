    <!--
        Added the entity Employee.
    -->
    <changeSet id="20180720045234-1" author="jhipster">
        <createTable tableName="employee" remarks="Employee - entity">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="employee_name" type="varchar(255)">
                <constraints nullable="false" />
            </column>

            <column name="employee_first_name" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="employee_last_name" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="employee_dob" type="datetime">
                <constraints nullable="true" />
            </column>

            <column name="employee_sex" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="employee_identity_card" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="employee_phone" type="varchar(255)">
                <constraints nullable="false" />
            </column>

            <column name="employee_email" type="varchar(255)">
                <constraints nullable="false" />
            </column>

            <column name="employee_avatar" type="longblob">
                <constraints nullable="true" />
            </column>
            <column name="employee_avatar_content_type" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="employee_facebook" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="employee_linkedin" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="employee_instagram" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="employee_google_plus" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="employee_zalo" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="employee_twitter" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="employee_youtube" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="contact_id" type="bigint">
                <constraints unique="true" nullable="true" />
            </column>            <column name="photo_id" type="bigint">
                <constraints unique="true" nullable="true" />
            </column>
            <column name="jobtitle_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="department_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="manager_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>
        <dropDefaultValue tableName="employee" columnName="employee_dob" columnDataType="datetime"/>
        
