<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">
    <!--
        Added the constraints for entity Property.
    -->
    <changeSet id="20180720045237-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="location_id"
                                 baseTableName="property"
                                 constraintName="fk_property_location_id"
                                 referencedColumnNames="id"
                                 referencedTableName="location"/>

        <addForeignKeyConstraint baseColumnNames="residential_area_id"
                                 baseTableName="property"
                                 constraintName="fk_property_residential_area_id"
                                 referencedColumnNames="id"
                                 referencedTableName="residential_area"/>

        <addForeignKeyConstraint baseColumnNames="properties_id"
                                 baseTableName="property_tag"
                                 constraintName="fk_property_tag_properties_id"
                                 referencedColumnNames="id"
                                 referencedTableName="property"/>
        <addForeignKeyConstraint baseColumnNames="tags_id"
                                 baseTableName="property_tag"
                                 constraintName="fk_property_tag_tags_id"
                                 referencedColumnNames="id"
                                 referencedTableName="tag"/>
        
        <addForeignKeyConstraint baseColumnNames="properties_id"
                                 baseTableName="property_buildingtype"
                                 constraintName="fk_property_buildingtype_properties_id"
                                 referencedColumnNames="id"
                                 referencedTableName="property"/>
        <addForeignKeyConstraint baseColumnNames="buildingtypes_id"
                                 baseTableName="property_buildingtype"
                                 constraintName="fk_property_buildingtype_buildingtypes_id"
                                 referencedColumnNames="id"
                                 referencedTableName="building_type"/>
        
        <addForeignKeyConstraint baseColumnNames="properties_id"
                                 baseTableName="property_photo"
                                 constraintName="fk_property_photo_properties_id"
                                 referencedColumnNames="id"
                                 referencedTableName="property"/>
        <addForeignKeyConstraint baseColumnNames="photos_id"
                                 baseTableName="property_photo"
                                 constraintName="fk_property_photo_photos_id"
                                 referencedColumnNames="id"
                                 referencedTableName="photo"/>
        
    </changeSet>
</databaseChangeLog>
